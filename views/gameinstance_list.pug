extends layout

block content
  h1= title

  ul
    each instance in gameinstance_list
      li
        a(href=instance.url) #{instance.game.title}: #{instance.publisher.name} -
        if instance.status == 'Available'
          span.text-success #{instance.status}
        else if instance.status == 'Maintenance'
          span.text-danger #{instance.status}
        else
          span.text-warning #{instance.status}
        if instance.status != 'Available'
          span (Due: #{instance.due_date_formatted} )
    else
      li There are no game copies in this library.
