extends layout

block content
  h1 #{title} #{publisher.name}

  p #[strong Name:] #{publisher.name}
  p #[strong Location:] #{publisher.location}

  div(margin-left: 20px, margin-top:20px)
    h3 Games
    ul
      each game in games_list
        a(href=game.url) li #{game.title}
      else
        p There are no games by this publisher.
  hr
  p
    a(href=publisher.url+'/delete') Delete platform
