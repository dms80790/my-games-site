extends layout

block content
  h1= title + ": " + genre.name

  div(style="margin-left:20px;margin-top:20px")
    h4 Games

    dl
      each game in genre_games
        dt
          a(href=game.url) #{game.title}
        dd #{game.summary}

      else
        p This genre has no games.

  hr
  p
    a(href=genre.url+'/delete') Delete genre
