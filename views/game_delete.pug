extends layout

block content
  h1 #{title} #{game._id}
  if gameinstance_list.length
    p #[strong Delete the following game instances before attempting to delete this game.]
      div(style='margin-left:20px;margin-top:20px')
        h4 Game Instances
        dl
        each instance in gameinstance_list
          dt
            a(href=instance.url) #{instance.game.title}
          dd #{instance.isbn}

  else
    p Are you sure you want to delete this game?
    form(method="POST" action="")
      div.form-group
        input#game_id.form-control(type='hidden' value=game._id name='game_id' required)
        button.btn.btn-primary(type='submit') Delete
