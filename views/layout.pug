doctype html
html(lang="en")
	head
		title= title
		meta(charset="utf-8")
		meta(name='viewport' content='width=device-width' initial-scale='1')
		link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css', integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z", crossorigin="anonymous")
		script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js", integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj", crossorigin="anonymous") script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js", integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV", crossorigin="anonymous")
		link(rel='stylesheet' href='/stylesheets/styles.css')
		link(rel="preconnect" href="https://fonts.googleapis.com")
		link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
		link(href="https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap" rel="stylesheet")
	body
		div.header
			a(href='/catalog')
				h1 GameLibrary
			if !user
				a(href='/users/login')
					button#login-btn.btn.btn-primary Log In
			else
				p.userNameLink Logged in as:
					a(href=user.url) !{user.username}
				a(href='/users/logout')
					button#login-btn.btn.btn-primary Log Out
		div(class='container-fluid')
			div(class='row')
				div(class='col-sm-2')
					block sidebar
						ul(class='sidebar-nav')
							p.bold View
							li
								a(href='/catalog/games') All Games
							li
								a(href='/catalog/publishers') All Publishers
							li
								a(href='/catalog/genres') All Genres
							li
								a(href='/catalog/gameinstances') All Game Instances
							li
								a(href='/catalog/platforms') All Platforms
							li
								a(href='/catalog/universalgames') Universal Game List							
							hr
							p.bold Create
							li
								a(href='/catalog/publisher/create') Create New Publisher
							li
								a(href='/catalog/genre/create') Create New Genre
							li
								a(href='/catalog/game/create') Create New Game
							li
								a(href='/catalog/gameinstance/create') Create New Game Instance
							li
								a(href='/catalog/platform/create') Create New Platform
				<div class="clearfix visible-xs"></div>
				div(class='col-sm-1-')
					block content
