extends layout

block content
  h1= title

  form(method='POST', action='')
    div.form-group
      label(for='name') Genre Name:
      input#name.form-control(type='text' name='name' placeholder='Fantasy, Science Fiction, etc' required='true' value=(genre==null) ? '' : genre.name)

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      each error in errors
        li!= error.msg
